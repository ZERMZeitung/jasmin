all {
    !go get github.com/zermzeitung/jasmin
    !go build
}

test {
    !go get github.com/zermzeitung/jasmin
    !go run *.go ../zerm.eu
}

arm {
    !go get github.com/zermzeitung/jasmin
    !GOOS=linux GOARCH=arm go build -o jasmin-arm -v -a
}

x86 {
    !go get github.com/zermzeitung/jasmin
    !GOOS=linux GOARCH=amd64 go build -o jasmin-x86 -v -a
}

release (x86 arm) {}

clean {
    !rm -f jasmin-*
}
